    <hudson.tasks.Shell>
      <command>##&quot;载入color脚本&quot;
. /usr/local/kkcli/lib/color.sh

host=&apos;16.163.43.163&apos;
ports=&apos;8112 8113 8114 8118&apos;
env=&apos;prod&apos;
version=`git rev-parse --short HEAD`&quot;-&quot;`date +%F-%H-%M`

if [[ $action == &apos;deploy&apos; ]];then
  ## 打包
  colo_r purple &quot;开始打包&quot;
  cd $WORKSPACE
  /opt/maven-3.8.4/bin/mvn clean package 
  
  for project in `echo $projects|sed &apos;s/,/ /g&apos;`;do
    from=`ls $WORKSPACE/$project/target/*.jar`
    if [ ! -f &quot;${from}&quot; ]; then
     colo_r red &quot;jar 打包失败 $project&quot; 
     exit 1
    fi
    ## 发布
    colo_r purple &quot;开始发布 $project&quot;
    kkcli app java --project=$project --host=$host --env=$env --from=$from --version=$version --action=$action
    
    ## 检查服务状态
    colo_r purple &quot;检查服务状态&quot;
    service_status=0
    sudo ansible -b -i /usr/local/kkcli/inventory/hosts-${env} ${host} -m shell -a &quot;systemctl status ${project}&quot; | grep rc=0 || service_status=1
    if [[ $service_status -eq 0 ]]; then
       colo_r green &quot;服务器启动成功&quot;
       sudo ansible -b -i /usr/local/kkcli/inventory/hosts-${env} ${host} -m shell -a &quot;systemctl status ${project}&quot;   
    else
       colo_r red &quot;服务器启动失败&quot;
       sudo ansible -b -i /usr/local/kkcli/inventory/hosts-${env} ${host} -m shell -a &quot;journalctl -n 500 -u $project |egrep -m 1 -A30 &apos;ERROR&apos;&quot;
       exit 1
	fi
  done
else
  ## 回滚、重启、停止
  for project in `echo $projects`;do
    colo_r purple &quot;开始$action $project&quot;
    kkcli app java --project=$project --host=$host --env=$env --action=$action
  done
fi


## 检查服务端口
colo_r purple &quot;检查服务端口&quot;
port_status=0
for port in `echo $ports`;do 
  n=`sudo ansible -b -i /usr/local/kkcli/inventory/hosts-${env} ${host} -m shell -a &quot;netstat -tpnl&quot;|grep -w ${port}| wc -l`
  echo $n
  if [ $n -lt 1 ]; then
     port_status=1
     colo_r red &quot;$port不在，服务器启动失败&quot;
     exit -168
  else
     port_status=0
  fi 
done</command>
