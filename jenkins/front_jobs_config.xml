project=${app}-provider
src_dir=yiling-service-group/${app}-service
code_dir=$WORKSPACE/$src_dir/$project
version=`git rev-parse --short HEAD`"-"`date +%F-%H-%M`

if [[ $action == 'deploy' ]];then
  ## 打包
  colo_r purple "开始打包"
  cd $WORKSPACE/$src_dir
  /yl/app/maven381/bin/mvn clean deploy -pl com.yiling:$project -am -Dmaven.test.skip=true  
  from=`ls $code_dir/target/*.jar`
  if [ ! -f "${from}" ]; then
   colo_r red "jar 打包失败" 
   exit 1
  fi
  ## 发布
  colo_r purple "开始发布"
  kkcli app java --project=$project --host=$host --env=$env --from=$from --version=$version \
  --action=$action
else
  ## 回滚或重启
  colo_r purple "开始$action"
  kkcli app java --project=$project --host=$host --env=$env --action=$action
fi


## 检查服务端口
colo_r purple "检查服务端口"
port_status=0
for port in `echo $ports`;do 
  n=`sudo ansible -b -i /usr/local/kkcli/inventory/hosts-${env} ${host} -m shell -a "netstat -tpnl"|grep -w ${port}| wc -l`
  echo $n
  if [ $n -lt 1 ]; then
     port_status=1
     colo_r red "$port不在，服务器启动失败"
  else
     port_status=0
  fi 
done

